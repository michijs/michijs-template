{
    "compilerOptions": {
        "allowJs": true,
        "resolveJsonModule": true,
        "checkJs": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": true,
        "experimentalDecorators": true,
        "noErrorTruncation": true,
        "lib": [
            "dom",
            "es2021"
        ],
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "es2020",
        "target": "es2019",
        "baseUrl": "./src",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitThis": true,
        "jsx": "react-jsx",
        "jsxImportSource": "@lsegurado/ls-element"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "*.spec.*",
        "node_modules"
    ]
}