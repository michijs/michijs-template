{
  "name": "@michijs/michijs-template",
  "license": "MIT",
  "version": "0.0.1",
  "description": "Template for MichiJS library",
  "scripts": {
    "start": "michi-server --start",
    "dist": "michi-server --dist",
    "build": "michi-server --build",
    "publish-patch-version": "npm version patch && npm run publish-npm",
    "publish-npm": "npm run dist && npm publish --access public",
    "lint": "rome check --apply-suggested .",
    "sandbox": "npm install && npm run start"
  },
  "keywords": [
    "web-components",
    "michijs"
  ],
  "devDependencies": {
    "@michijs/server": "0.0.34",
    "lint-staged": "^10.5.4",
    "simple-git-hooks": "^2.2.0",
    "rome": "^0.10.1-next",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@michijs/michijs": "1.0.0-rc-3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "rome check --apply-suggested"
  }
}
