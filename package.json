{
  "name": "@michijs/michijs-template",
  "license": "MIT",
  "version": "0.0.1",
  "description": "Template for MichiJS library",
  "scripts": {
    "start": "michi-server --start",
    "dist": "michi-server --dist",
    "build": "michi-server --build",
    "publish-npm": "npm run dist && npm publish --access public",
    "test-tsc": "tsc --noEmit --skipLibCheck",
    "sandbox": "npm install && npm run start"
  },
  "keywords": [
    "web-components",
    "michijs"
  ],
  "devDependencies": {
    "@michijs/dev-server": "0.2.3",
    "lint-staged": "13.2.0",
    "simple-git-hooks": "2.8.1",
    "rome": "12.0.0",
    "typescript": "5.0.3"
  },
  "dependencies": {
    "@michijs/michijs": "1.1.6"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "rome check --apply",
      "rome format --write"
    ]
  }
}
